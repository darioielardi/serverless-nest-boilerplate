// Typescript config for serverless-plugin-typescript
{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "target": "es6",
    "moduleResolution": "node",
    "lib": ["es2015"],
    // DO NOT OVERRIDE
    "outDir": ".build",
    "rootDir": "./"
  }
}
